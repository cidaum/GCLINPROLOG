#!/usr/bin/yap -L --
# Script para iniciar o compilador e processar os argumentos

%%% Carrega Scripts
?-t.
?-reconsult('source/token.pl').
?-reconsult('source/arvore.pl').
?-reconsult('source/lexica/palavras_chaves.pl').
?-reconsult('source/lexica/tipo_char.pl').
?-reconsult('source/lexica/lex.pl').
?-reconsult('source/lexica/automato.pl').
?-reconsult('source/sintatica/preditivo.pl').

%%% Executa open.pl/abrir
main( [] ).
main( [H|T] ) :-
        compilar( H ), nl,
        main( T ).

%%% Processa entrada do usu√°rio./g	
:- unix( argv(AllArgs) ), main( AllArgs ).
